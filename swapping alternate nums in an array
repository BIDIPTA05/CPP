#include<iostream>
using namespace std;

void swapAlt(int arr[],int size){

    for (int i = 0; i < size; i += 2)
    {
        if(i+1<size){
            // swap(arr[i], arr[i + 1]);
            int temp = arr[i];
            arr[i] = arr[i + 1];
            arr[i+1] = temp;
        }
    }
}

void printarray(int arr[],int size){
    for (int i = 0; i < size;i++){
        cout << arr[i] << " ";
    }
}



int main(){

    int even[8] = {1, 2, 3, 4, 5, 6, 7,8};
    swapAlt(even, 8);
    printarray(even, 8);
    return 0;
}
