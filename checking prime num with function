#include<iostream>
using namespace std;
bool isPrime(int n ) {
    // 0->non prime  ; 1 -> prime
    if (n % 2 == 0)
    {
        return 0;
        }
   
   return 1;
}

int main() {
   
   int n ;
   cout << "Enter the number: ";
   cin >> n;
   if(isPrime(n)) {
        cout <<"It is a Prime number " <<endl;
   }
   else{
       cout<< "It is Not a prime number "<<endl;
   }
   return 0;
}
