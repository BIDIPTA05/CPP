#include<iostream>
using namespace std;

int binarySearch(int arr[],int size,int key){
    int start = 0;
    int end = size - 1;
    int mid = start + (end-start)/2;
    while(start<=end){
        if(arr[mid]==key){
            return mid;
        }
        if(key>arr[mid]){
            start = mid + 1;
        }
        else{
            end = mid - 1;
        }
        mid = start + (end - start) / 2;
    }
    return -1;
}

int main(){

    int even[8] = {1, 2, 3, 6, 55, 45, 34, 39};

    int odd[7] = {5, 43, 26, 77, 65, 4, 55};

    int evenIndex=binarySearch(even, 8, 55);
    cout <<"The index of 55 is "<< evenIndex<<endl;
    int oddIndex=binarySearch(odd, 7, 77);

    
    cout << "The index of 77 is " << oddIndex;
    return 0;
}
